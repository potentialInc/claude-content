{
  "version": "1.0",
  "skills": {
    "blog-post-writing": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "blog post",
          "blog article",
          "write blog",
          "blog content",
          "article writing"
        ],
        "intentPatterns": [
          "(write|create|draft).*(blog|article)",
          "(blog|article).*(writing|post|content)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "blog/**/*.md",
          "content/**/*.md",
          "articles/**/*.md"
        ]
      }
    },
